@model EDAS.WebApp.Models.SortingVM

<h1>Sorting page</h1>

<div class="container border p-3">
    <p class="fw-bolder fs-4">In the only field enter integers separated by comma to be sorted</p>
    <div class="badge bg-primary text-wrap fs-4">Example: Integers: 6, 3, 9, 12, 2, 50</div>
</div>

<form method="post" asp-action="QuickSort" asp-controller="Algorithm">
    <div class="container border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-2">
                <label asp-for=@Model.ElementsCSV class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-6 pb-3">
                <input asp-for=@Model.ElementsCSV class="form-control" />
                <span asp-validation-for=@Model.ElementsCSV class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-4">
                <input type="submit" value="Submit" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}